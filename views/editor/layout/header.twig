<div class="editor-header">
  <div class="editor-logo">
    <ion-icon name="cube-outline"></ion-icon>
    <span>{{ block_title }}</span>
  </div>
  <div class="editor-controls">
    <div class="breakpoint-controls">
      {% for breakpoint in breakpoints %}
        <button type="button" class="breakpoint-button" data-breakpoint="{{ breakpoint.id }}" title="{{ breakpoint.name }} ({{ breakpoint.width }}px)">
          <ion-icon name="{{ breakpoint.icon }}"></ion-icon>
        </button>
      {% endfor %}
      <button type="button" class="breakpoint-settings" title="Breakpoint Settings">
        <ion-icon name="settings-outline"></ion-icon>
      </button>
    </div>
    <div class="preview-context-controls">
      <button type="button" class="preview-context-button" title="Change Preview Context">
        <ion-icon name="eye-outline"></ion-icon>
        <span class="current-context">Home</span>
      </button>
    </div>
  </div>
  <div class="global-controls">
    <div class="editor-status">
      <div class="editor-status-indicator"></div>
      <span class="editor-status-text">Ready</span>
    </div>
    <button type="button" class="editor-action-button" id="editor-acf" title="Open Custom Fields">
      <ion-icon name="list-outline"></ion-icon>
    </button>
    <button type="button" class="editor-action-button" id="global-save-button" title="Save All Changes">
      <ion-icon name="save"></ion-icon>
    </button>
    <button type="button" class="editor-action-button" id="editor-action-close" title="Close Editor">
      <ion-icon name="close-outline"></ion-icon>
    </button>
  </div>
</div>
